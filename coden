  class Ufo{
  int ux = -1000;
  int uy = 50;
  boolean moveleft = false;
  int count = 0;
  int point = 0;
  
  void update() {
    fill(255,0,255);
    rect(ux-25,uy,50,45);
    
    if (moveleft == false){
      ux = ux +2;
      count ++;
      if (count > 1400){
        moveleft = true;
        count = 0;
      }
    }
    if (moveleft == true){
      ux = ux -2;
      count ++;
      if (count > 1400){
        moveleft = false;
        count =0;
      }
    }    
     if(dist(ux,uy,sx,sy)<=20){
     ux=2000;
     sx=-2000;
     point=point+300;
     print("point: "+point);
     
   }
    
    
    
  }

}
