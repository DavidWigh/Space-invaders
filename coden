Enemy40 e402 = new Enemy40(120,160);
Enemy40 e403 = new Enemy40(180,160);
Enemy40 e404 = new Enemy40(240,160);
Enemy40 e405 = new Enemy40(300,160);
Enemy40 e406 = new Enemy40(360,160);
Enemy40 e407 = new Enemy40(420,160);

boolean eTilH = true;
int eMoveCount = 0;

int px = 375;
 boolean shoot = false;
 int sy = 725;
 int sx;
 int cooldown=0;
 boolean dead = false;
 
void setup(){
  size(800,800);  
  frameRate(60);
}

void draw(){
  background(0);  


  u1.update();
  
  //enemy bevægelse
  //første række
  e101.update();
  e102.update();
  e103.update();
  e104.update();
  e105.update();
  e106.update();
  e107.update();
  //anden række
  e108.update();
  e109.update();
  e1010.update();
  e1011.update();
  e1012.update();
  e1013.update();
  e1014.update();
  //tredje række
  e201.update();
  e202.update();
  e203.update();
  e204.update();
  e205.update();
  e206.update();
  e207.update();
  //fjerde række
  e208.update();
  e209.update();
  e2010.update();
  e2011.update();
  e2012.update();
  e2013.update();
  e2014.update();
  //femte række
  e401.update();
  e402.update();
  e403.update();
  e404.update();
  e405.update();
  e406.update();
  e407.update();
  
  if(eTilH == true && eMoveCount <=320 ){
    //første række
    e101.ex ++;
    e102.ex ++;
    e103.ex ++;
    e104.ex ++;
    e105.ex ++;
    e106.ex ++;
    e107.ex ++;
    //anden række
    e108.ex ++;
    e109.ex ++;
    e1010.ex ++;
    e1011.ex ++;
    e1012.ex ++;
    e1013.ex ++;
    e1014.ex ++;
    //tredje række
    e201.ex ++;
    e202.ex ++;
    e203.ex ++;
    e204.ex ++;
    e205.ex ++;
    e206.ex ++;
    e207.ex ++;
    //fjrde række
    e208.ex ++;
    e209.ex ++;
    e2010.ex ++;
    e2011.ex ++;
    e2012.ex ++;
    e2013.ex ++;
    e2014.ex ++;
    //femte række
    e401.ex ++;
    e402.ex ++;
    e403.ex ++;
    e404.ex ++;
    e405.ex ++;
    e406.ex ++;
    e407.ex ++;
    
    eMoveCount++;
    if(eMoveCount > 320){
      eTilH = false;
      eMoveCount = 0;
      //første række
      e101.ey = e101.ey+10;
      e102.ey = e102.ey+10;
      e103.ey = e103.ey+10;
      e104.ey = e104.ey+10;
      e105.ey = e105.ey+10;
      e106.ey = e106.ey+10;
      e107.ey = e107.ey+10;
      //anden række
      e108.ey = e108.ey+10;
      e109.ey = e109.ey+10;
      e1010.ey = e1010.ey+10;
      e1011.ey = e1011.ey+10;
      e1012.ey = e1012.ey+10;
      e1013.ey = e1013.ey+10;
      e1014.ey = e1014.ey+10;
      //tredje række
      e201.ey = e201.ey+10;
      e202.ey = e202.ey+10;
      e203.ey = e203.ey+10;
      e204.ey = e204.ey+10;
      e205.ey = e205.ey+10;
      e206.ey = e206.ey+10;
      e207.ey = e207.ey+10;
      //fjrde række
      e208.ey = e208.ey+10;
      e209.ey = e209.ey+10;
      e2010.ey = e2010.ey+10;
      e2011.ey = e2011.ey+10;
      e2012.ey = e2012.ey+10;
      e2013.ey = e2013.ey+10;
      e2014.ey = e2014.ey+10;
      //femte række
      e401.ey = e401.ey+10;
      e402.ey = e402.ey+10;
      e403.ey = e403.ey+10;
      e404.ey = e404.ey+10;
      e405.ey = e405.ey+10;
      e406.ey = e406.ey+10;
      e407.ey = e407.ey+10;
    }
  }
  if(eTilH == false && eMoveCount <=320 ){
    //første række
    e101.ex --;
    e102.ex --;
    e103.ex --;
    e104.ex --;
    e105.ex --;
    e106.ex --;
    e107.ex --;
    //anden række
    e108.ex --;
    e109.ex --;
    e1010.ex --;
    e1011.ex --;
    e1012.ex --;
    e1013.ex --;
    e1014.ex --;
    //tredje række
    e201.ex --;
    e202.ex --;
    e203.ex --;
    e204.ex --;
    e205.ex --;
    e206.ex --;
    e207.ex --;
    //fjrde række
    e208.ex --;
    e209.ex --;
    e2010.ex --;
    e2011.ex --;
    e2012.ex --;
    e2013.ex --;
    e2014.ex --;
    //femte række
    e401.ex --;
    e402.ex --;
    e403.ex --;
    e404.ex --;
    e405.ex --;
    e406.ex --;
    e407.ex --;
    
    eMoveCount++;
    if(eMoveCount > 320){
      eTilH = true;
      eMoveCount = 0;
      //første række
      e101.ey = e101.ey+10;
      e102.ey = e102.ey+10;
      e103.ey = e103.ey+10;
      e104.ey = e104.ey+10;
      e105.ey = e105.ey+10;
      e106.ey = e106.ey+10;
      e107.ey = e107.ey+10;
      //anden række
      e108.ey = e108.ey+10;
      e109.ey = e109.ey+10;
      e1010.ey = e1010.ey+10;
      e1011.ey = e1011.ey+10;
      e1012.ey = e1012.ey+10;
      e1013.ey = e1013.ey+10;
      e1014.ey = e1014.ey+10;
      //tredje række
      e201.ey = e201.ey+10;
      e202.ey = e202.ey+10;
      e203.ey = e203.ey+10;
      e204.ey = e204.ey+10;
      e205.ey = e205.ey+10;
      e206.ey = e206.ey+10;
      e207.ey = e207.ey+10;
      //fjrde række
      e208.ey = e208.ey+10;
      e209.ey = e209.ey+10;
      e2010.ey = e2010.ey+10;
      e2011.ey = e2011.ey+10;
      e2012.ey = e2012.ey+10;
      e2013.ey = e2013.ey+10;
      e2014.ey = e2014.ey+10;
      //femte række
      e401.ey = e401.ey+10;
      e402.ey = e402.ey+10;
      e403.ey = e403.ey+10;
      e404.ey = e404.ey+10;
      e405.ey = e405.ey+10;
      e406.ey = e406.ey+10;
      e407.ey = e407.ey+10;
    }
  }
  
  
  
  //playeren
  fill(255,255,0);
  rect(px,725,50,35);
  if(keyPressed == true && key=='d' && px<750){
    px = px+5;
  }
  if(keyPressed == true && key=='a' && px>0){
    px = px-5;
  }
  if(keyPressed == true && key=='w'&& shoot == false){
    shoot = true;
    cooldown = 0;
    sx = px+24;
    sy = 725;
  }
  if(shoot == true){
    rect(sx,sy,2,30);
    sy = sy-7;
    cooldown++;
    if(cooldown >= 100){
      shoot = false;
    }
  }
  
}


//======================================= Classes =====================================================


class Enemy10 {
  int ex; 
  int ey;
  int esx ;
  int esy ;
  int eCooldown = 0;
  int point =0;
  boolean eShoot = false;
  boolean doCount = false;
  float chance= random(0,180);
  
  Enemy10(int eX, int eY){
  ex =eX;
  ey =eY;
  }
  
  void update() {
    fill(0,255,0);
    rect(ex-25,ey-22,50,45);
    
    if (e101.ey>ey && e101.ex >= ex-1 && e101.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e102.ey>ey && e102.ex >= ex-1 && e102.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e103.ey>ey && e103.ex >= ex-1 && e103.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e104.ey>ey && e104.ex >= ex-1 && e104.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e105.ey>ey && e105.ex >= ex-1 && e105.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e106.ey>ey && e106.ex >= ex-1 && e106.ex <= ex+1){eShoot = false; eCooldown = 0;}
    if (e107.ey>ey && e107.ex >= ex-1 && e107.ex <= ex+1){eShoot = false; eCooldown = 0;}
    
    if(dist(ex,ey,sx,sy)<=25){
      ex=2000;
      sx=-2000;
      point=point+10;
    }
   
      if(eShoot == false){
        eCooldown++;
        if(eCooldown >= 30){
          doCount = true;
          eCooldown = 0;
        }
      }
      if(eShoot == true){
        eCooldown++;
        if(eCooldown >= 180){
          eShoot = false;
          eCooldown = 0;
        }
      }
        
      chance= random(0,180);
      if(chance<=1 && doCount == true ){
        esx = ex;
        esy = ey;
        eShoot = true;
        doCount = false;
      }
  
      if(eShoot == true){
        rect(esx,esy,2,30);
        esy = esy+5;
      }
      
      if(dist(px+25,725+17,esx,esy)<=25){
      px=2000;
      esx=-2000;
      dead = true;
    }
  
  }

}
