    rect(ex-25,ey-22,50,45);
   
   if(dist(ex,ey,sx,sy)<=20){
     ex=1000;
     sx=-1000;
     point=point+20;
     print("point: "+point);
   }
     chance= random(0,180);
     if(chance<=1 && eShoot == false){
       eShoot = true;
       print("davs");
