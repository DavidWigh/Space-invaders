    if(dist(ex,ey,sx,sy)<=25){
      ex=2000;
      sx=-2000;
      point=point+10;
    }
   
      if(eShoot == false){
        eCooldown++;
        if(eCooldown >= 30){
          doCount = true;
          eCooldown = 0;
